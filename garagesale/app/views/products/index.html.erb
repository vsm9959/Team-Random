<h1>Listing products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @products.each do |product| %>
  <tr>
    <td><%= product.name %></td>
    <td><%= product.price %></td>
    <td><%= link_to 'Show', [product.sale, product] %></td>
    <td><%= link_to 'Edit', edit_sale_product_path(product.sale, product) %></td>
    <td><%= link_to 'Destroy', [product.sale, product], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Product', new_sale_product_path(params[:sale_id]) %>
